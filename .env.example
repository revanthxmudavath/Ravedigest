# RaveDigest Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_URL=postgresql://postgres:your_password@postgres:5432/digest_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=digest_db
POSTGRES_PORT=5432
POSTGRES_HOST=postgres  # Use 'localhost' for local development

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis  # Use 'localhost' for local development
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# AI & CONTENT ANALYSIS
# ===========================================
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Alternative AI Provider (Optional)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free
OPENROUTER_MODEL_CAT=meta-llama/llama-3.2-1b-instruct:free

# ===========================================
# NOTION INTEGRATION
# ===========================================
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=ntn_your-notion-integration-key-here
# Database ID from your Notion database URL
NOTION_DB_ID=your-notion-database-id-here

# ===========================================
# SERVICE URLS (Docker Internal)
# ===========================================
COLLECTOR_URL=http://collector:8001
ANALYZER_URL=http://analyzer:8002
COMPOSER_URL=http://composer:8003
NOTION_WORKER_URL=http://notion-worker:8004

# ===========================================
# SCHEDULER CONFIGURATION
# ===========================================
SCHEDULER_HTTP_TIMEOUT=30
SCHEDULER_STATUS_TIMEOUT=15

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
LOCAL_DEV=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
PYTHONPATH=..

# ===========================================
# EXTERNAL APIS (Optional - for RSS feeds)
# ===========================================
# Reddit API (if using Reddit feeds)
REDDIT_SECRET=your_reddit_secret_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_USER_AGENT=DigestBot/0.1 by u/yourusername

# YouTube API (if using YouTube feeds)
YOUTUBE_API_KEY=your_youtube_api_key_here

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys and passwords
# 3. For local development, change service hosts to 'localhost'
# 4. Never commit your .env file to version control
# 5. See README.md for detailed setup instructions